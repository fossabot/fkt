{
	"compilerOptions": {
		"baseUrl": "./src",
		"declaration": true,
		"module": "es2020",
		"moduleResolution": "Node",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"sourceMap": true,
		"target": "es2020",
		"outDir": "dist",
		"paths": {
			"@fkt-core/*": ["./*"]
		},
		"rootDir": "src"
	},
	"compileOnSave": true,
	"include": ["src/**/*"],
	"exclude": ["**/.wip/*", "node_modules", "dist", "**/__tests__/*", "**/__fixtures__/*"]
}
