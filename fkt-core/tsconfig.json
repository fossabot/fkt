{
	"compilerOptions": {
		"baseUrl": "./src",
		"declaration": true,
		"esModuleInterop": true,
		"module": "CommonJS",
		"moduleResolution": "Node",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"rootDir": "src",
		"sourceMap": true,
		"target": "es2020",
		"outDir": "dist",
		"paths": {
			"@fkt-core/*": ["./*"]
		}
	},
	"compileOnSave": true,
	"include": ["src/**/*"],
	"exclude": ["**/.wip/*", "node_modules", "dist", "**/__tests__/*", "**/__fixtures__/*"]
}
